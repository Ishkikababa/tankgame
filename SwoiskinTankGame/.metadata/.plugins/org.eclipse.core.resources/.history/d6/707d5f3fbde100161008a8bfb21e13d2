import java.util.ArrayList;

import gpdraw.DrawingTool;
import gpdraw.SketchPad;

public class Triangle
{
	SketchPad pad = new SketchPad(500, 500);
	DrawingTool pen = new DrawingTool(pad);
	ArrayList<String> d = new ArrayList<String>();
	
	public Triangle()
	{
		pen.up();
		pen.move(-pad.getWidth()/2, 300-pad.getHeight()/2);
		pen.down();
		pen.setDirection(0);
	}
	
	public void drawD(float level, float length, String s)
	{
		d.add(s);
		for (int i=0;i<level;i++)
		{
			for (int j=d.size();j>=0;j-=2)
			{
				printD();
				d.add(j, "l");
				printD();
				j--;
				d.add(j, "r");
			}
		}
		
	}
	
	private void printD()
	{
		for (int i=0;i<d.size();i++)
		{
			System.out.print(d.get(i));
		}
	}
	
	public void drawK(float level, float length)
	{
		drawSnowFlake(level, length);
	}
	
	void drawSnowFlake(float depth, float width)
	{
		double x = pen.getXPos();
		double y = pen.getYPos();
		double d = pen.getDirection();
					
		//drawKochCurve(depth-1, width/3);

		// special
		x = pen.getXPos();
		y = pen.getYPos();
		d = pen.getDirection();
		
		pen.setDirection(300 + d);
		drawT(depth, width);
		pen.move(x, y);
		pen.setDirection(d);
		
		drawKochCurve(depth, width);
		pen.turnRight(120);
		drawKochCurve(depth, width);
		pen.turnRight(120);
		drawKochCurve(depth, width);
		pen.turnRight(120);
	}
	
	void drawKochCurve(float depth, float width)
	{	
		if (depth < 1)
			pen.forward(width);
		else
		{
			double x = pen.getXPos();
			double y = pen.getYPos();
			double d = pen.getDirection();
						
			drawKochCurve(depth-1, width/3);

			// special
			x = pen.getXPos();
			y = pen.getYPos();
			d = pen.getDirection();
			drawT(depth, width/3);
			pen.move(x, y);
			pen.setDirection(d);
			
			pen.turnLeft(60);
			
			drawKochCurve(depth-1, width/3);

			pen.turnRight(120);
			
			drawKochCurve(depth-1, width/3);
			
			pen.turnLeft(60);
			
			drawKochCurve(depth-1, width/3);
			
		}
	}
	
	public void drawT(float level, float length)
	{
		drawSide(level, length);
	
		pen.turnLeft(120);
		pen.forward(length);
		pen.turnLeft(120);
		pen.forward(length);
	}
	
	public void drawSide(float level, float length)
	{
		if (level > 0)
		{
			pen.forward(length/2);
			
			pen.turnLeft(120);
			drawSide(level-1, length/2);
			
			pen.turnRight(120);
			drawSide(level-1, length/2);
			
			pen.turnRight(120);
			drawSide(level-1, length/2);
			
			pen.turnLeft(120);
			
			pen.forward(length/2);
		}
		else
		{
			pen.forward(length);
		}
	}
}